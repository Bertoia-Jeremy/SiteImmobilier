{% extends 'base.html.twig' %}
{% block title %} Agence de Jéjé {% endblock %}
{% block body %}
    <div class="jumbotron text-center my-3">
        <div class="container">
            <h2>Agence de Jéjé</h2>
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Numquam perferendis reprehenderit ratione, laboriosam velit tempore. Ducimus facilis fugiat magni laudantium?</p>
        </div>    
    </div>
    
    <div class="container">
        <div class="row mx-0">
            {% for property in properties %}
                <div class="col-4-lg col-6-md col-12-sm">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">
                                {{ property.city }} {{ property.postalCode }}
                            </p>
                            <div class="text-primary" style="font-weight: bold; font-size: 2rem;"> {{ property.formattedPrice }} €</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}