{% extends 'base.html.twig' %}
{% block title %} Acheter {% endblock %}
{% block body %}
   <div class="jumbotron">
        <div class="container mt-3">
            <div class="row mx-0">
                <div class="col-md-8">
                    {% if property.fileName %}
                        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" class="img-fluid">
                    {% else %}
                        <img src="{{ 'images/properties/empty.jpg' | imagine_filter('medium') }}" alt="card-img-top" class="img-fluid">
                    {% endif %}                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2> {{ property.rooms }}pièce(s) - {{ property.surface }}m²</h2>
                    <div class="text-primary" style="font-weight: bold; font-size: 4rem;"> {{ property.formattedPrice }} €</div>
                    <a class="btn btn-primary" href="#" id="contactButton" {% if form.vars.submitted %} style="display:none;" {% endif %}>
                        Contacter l'agence
                    </a>
                    <div id="contactForm" class="my-4 container" {% if not form.vars.submitted %} style="display:none;" {% endif %}>
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col">{{ form_row(form.firstName) }}</div>
                                <div class="col">{{ form_row(form.lastName) }}</div>
                            </div>
                            <div class="row">
                                <div class="col">{{ form_row(form.phone) }}</div>
                                <div class="col">{{ form_row(form.email) }}</div>
                            </div>
                            <div class="row">
                                <div class="col">{{ form_row(form.message) }}</div>
                                {{ form_rest(form) }}
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Envoyer</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>  
            </div>
        </div>
   </div>
    <p> {{ property.description | nl2br }}</p>

    <div class="row mx-0">
        <div class="col-md-8">
            <h2>Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                    <td>Surface habitable</td>
                    <td>{{ property.surface }} m²</td>
                </tr>
                <tr>
                    <td>Pièces</td>
                    <td>{{ property.rooms }}</td>
                </tr>
                <tr>
                    <td>Chambre</td>
                    <td>{{ property.bedrooms }}</td>
                </tr>
                <tr>
                    <td>Chauffage</td>
                    <td>{{ property.heatType }}</td>
                </tr>
                <tr>
                    <td>Étage</td>
                    <td>{{ property.floor }}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
            <h2>Spécificités</h2>
            <ul class="list-group">
                {% for option in property.options %}
                    <li class="list-group-item">{{ option.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <nav class="nav nav-tabs my-3" id="tab"></nav>
{% endblock %}