{% extends 'base.html.twig' %}
{% block title %} Acheter {% endblock %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <h2>Voir tous nos biens</h2>
        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Numquam perferendis reprehenderit ratione, laboriosam velit tempore. Ducimus facilis fugiat magni laudantium?</p>
    </div>   

    <div class="container">
        <div class="row mx-0 justify-content-around">
            {% for property in properties %}
                <div class="col-4">
                    {% include ('/property/_property.html.twig') %}
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
{% endblock %}